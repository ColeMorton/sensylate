# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sensylate_db
DB_USER=your_username
DB_PASSWORD=your_password

# Environment-specific database connections
DEV_DB_CONNECTION_STRING=postgresql://user:pass@localhost:5432/sensylate_dev
STAGING_DB_CONNECTION_STRING=postgresql://user:pass@staging-db:5432/sensylate_staging
PROD_DB_CONNECTION_STRING=postgresql://user:pass@prod-db:5432/sensylate_prod

# API Configuration
API_BASE_URL=https://api.example.com
API_TOKEN=your_api_token_here

# Monitoring and Metrics
METRICS_ENDPOINT=https://metrics.example.com/api/v1
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Storage Configuration
S3_BUCKET_NAME=your-s3-bucket
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Feature Flags
ENABLE_CACHING=true
ENABLE_MONITORING=false
ENABLE_EMAIL_ALERTS=false