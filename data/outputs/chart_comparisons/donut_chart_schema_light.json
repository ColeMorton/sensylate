{
  "engine": "plotly",
  "chart_type": "enhanced_donut_chart",
  "version": "1.0.0",
  "theme": {
    "mode": "light",
    "colors": {
      "primary_data": "#26c6da",
      "secondary_data": "#7e57c2",
      "tertiary_data": "#3179f5",
      "background": "#fff",
      "text": "#121212",
      "borders": "#eaeaea"
    },
    "typography": {
      "font_family": "Heebo, Helvetica Neue, Arial, DejaVu Sans, Liberation Sans, sans-serif",
      "title_size": 18,
      "label_size": 10,
      "annotation_size": 9
    }
  },
  "layout": {
    "margin": {
      "l": 60,
      "r": 60,
      "t": 80,
      "b": 60
    },
    "showlegend": false,
    "hovermode": "closest"
  },
  "chart_config": {
    "type": "pie",
    "hole": 0.6,
    "text_position": "outside",
    "rotation": 90,
    "pull_excellent": 0.05
  },
  "data_requirements": {
    "fields": [
      {
        "name": "category",
        "type": "string",
        "required": true
      },
      {
        "name": "percentage",
        "type": "number",
        "required": true,
        "range": [
          0,
          100
        ]
      },
      {
        "name": "win_rate",
        "type": "number",
        "required": true,
        "range": [
          0,
          100
        ]
      }
    ],
    "format": "array_of_objects"
  }
}