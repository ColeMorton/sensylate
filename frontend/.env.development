# Development Environment Configuration
# This file contains development-specific environment variables
# Do not include sensitive data - use .env.local for secrets

# Environment Identification
PUBLIC_ENV=development
NODE_ENV=development

# Site Configuration
PUBLIC_SITE_URL=http://localhost:4321
PUBLIC_SITE_TITLE="Cole Morton - Development"
PUBLIC_SITE_DESCRIPTION="Personal website and trading analysis platform - Development"

# Feature Flags - Development (Most features enabled for testing)
PUBLIC_FEATURE_SEARCH=true
PUBLIC_FEATURE_THEME_SWITCHER=true
PUBLIC_FEATURE_COMMENTS=false
PUBLIC_FEATURE_GTM=false
PUBLIC_FEATURE_CALCULATORS=true
PUBLIC_FEATURE_CALCULATOR_ADVANCED=true
PUBLIC_FEATURE_ELEMENTS_PAGE=true
PUBLIC_FEATURE_AUTHORS_PAGE=true

# Build Configuration
ASTRO_DEV_MODE=true

# API Configuration (Use local/mock endpoints in development)
PUBLIC_API_BASE_URL=http://localhost:8000
PUBLIC_CONTACT_FORM_ENDPOINT=/api/contact

# Performance Configuration
PUBLIC_ENABLE_WEB_VITALS=true
PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Security Configuration (Relaxed for development)
PUBLIC_CSP_REPORT_URI=
PUBLIC_SECURITY_HEADERS_ENABLED=false

# Analytics Configuration (Disabled in development)
PUBLIC_ANALYTICS_ENABLED=false
