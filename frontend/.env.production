# Production Environment Configuration
# This file contains production-specific environment variables
# Do not include sensitive data - use deployment secrets for sensitive values

# Environment Identification
PUBLIC_ENV=production
NODE_ENV=production

# Site Configuration
PUBLIC_SITE_URL=https://colemorton.com
PUBLIC_SITE_TITLE="Cole Morton"
PUBLIC_SITE_DESCRIPTION="Trading strategy analysis, financial insights, and AI-powered investment research"

# Feature Flags - Production (Conservative approach)
PUBLIC_FEATURE_SEARCH=true
PUBLIC_FEATURE_THEME_SWITCHER=true
PUBLIC_FEATURE_COMMENTS=true
PUBLIC_FEATURE_GTM=true
PUBLIC_FEATURE_CALCULATORS=false
PUBLIC_FEATURE_CALCULATOR_ADVANCED=false
PUBLIC_FEATURE_ELEMENTS_PAGE=false
PUBLIC_FEATURE_AUTHORS_PAGE=false

# Build Configuration
ASTRO_DEV_MODE=false

# API Configuration
PUBLIC_API_BASE_URL=https://api.colemorton.com
PUBLIC_CONTACT_FORM_ENDPOINT=/api/contact

# Performance Configuration
PUBLIC_ENABLE_WEB_VITALS=false
PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Security Configuration
PUBLIC_CSP_REPORT_URI=https://colemorton.com/csp-report
PUBLIC_SECURITY_HEADERS_ENABLED=true

# Analytics Configuration
PUBLIC_ANALYTICS_ENABLED=true
