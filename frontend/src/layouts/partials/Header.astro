---
import Logo from "@/components/Logo.astro";
import ThemeSwitcher from "@/components/ThemeSwitcher.astro";
import { enhancedConfig } from "@/lib/config";
import { features } from "@/lib/featureFlags";
import menu from "@/config/menu.json";
import { IoSearch } from "react-icons/io5";

export interface ChildNavigationLink {
  name: string;
  url: string;
}

export interface NavigationLink {
  name: string;
  url: string;
  hasChildren?: boolean;
  children?: ChildNavigationLink[];
}

// Filter menu items based on feature flags
const filteredMain = menu.main
  .filter((item) => {
    if (item.url === "/elements" && !features.elements_page) {
      return false;
    }
    if (item.url === "/calculators" && !features.calculators) {
      return false;
    }
    if (item.url === "/charts" && !features.charts_page) {
      return false;
    }
    return true;
  })
  .map((item) => {
    // Filter children menu items based on feature flags
    if (item.hasChildren && item.children) {
      const filteredChildren = item.children.filter((child) => {
        if (child.url === "/authors" && !features.authors_page) {
          return false;
        }
        // Always hide 404 page from menu navigation (it should only be accessible via direct URL for actual 404 errors)
        if (child.url === "/404") {
          return false;
        }
        return true;
      });

      return {
        ...item,
        children: filteredChildren,
      };
    }
    return item;
  });

const { navigation_button, settings } = enhancedConfig;
const { pathname } = Astro.url;
---

<header class={`header z-30 ${settings.sticky_header && "sticky top-0"}`}>
  <nav class="navbar container">
    <!-- logo -->
    <div class="order-0">
      <Logo />
    </div>
    <!-- navbar toggler -->
    <input id="nav-toggle" type="checkbox" class="hidden" />
    <label
      for="nav-toggle"
      class="text-text-dark order-3 flex cursor-pointer items-center lg:order-1 lg:hidden dark:text-white"
    >
      <svg id="show-button" class="block h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Open</title>
        <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
      </svg>
      <svg id="hide-button" class="hidden h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Close</title>
        <polygon
          points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
          transform="rotate(45 10 10)"></polygon>
      </svg>
    </label>
    <!-- /navbar toggler -->
    <ul
      id="nav-menu"
      class="navbar-nav order-3 hidden w-full pb-6 lg:order-1 lg:flex lg:w-auto lg:space-x-2 lg:pb-0 xl:space-x-8 2xl:space-x-12"
    >
      {
        filteredMain.map((menu) => (
          <>
            {menu.hasChildren ? (
              <li class="nav-item nav-dropdown group relative">
                <span
                  class={`nav-link hover:text-text-light dark:hover:text-text inline-flex cursor-pointer items-center transition-colors duration-200 ${
                    menu.children?.map(({ url }) => url).includes(pathname) ||
                    menu.children
                      ?.map(({ url }) => `${url}/`)
                      .includes(pathname)
                      ? "active"
                      : ""
                  }`}
                >
                  {menu.name}
                  <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                  </svg>
                </span>
                <ul class="nav-dropdown-list hidden group-hover:block lg:invisible lg:absolute lg:block lg:opacity-0 lg:group-hover:visible lg:group-hover:opacity-100">
                  {menu.children?.map((child) => (
                    <li class="nav-dropdown-item">
                      <a
                        href={child.url}
                        aria-label={child.name}
                        class={`nav-dropdown-link hover:text-text-light dark:hover:text-text block cursor-pointer transition-colors duration-200 ${
                          (pathname === `${child.url}/` ||
                            pathname === child.url) &&
                          "active"
                        }`}
                      >
                        {child.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            ) : (
              <li class="nav-item">
                <a
                  href={menu.url}
                  data-astro-reload={menu.url === "/charts" ? true : undefined}
                  class={`nav-link hover:text-text-light dark:hover:text-text block cursor-pointer transition-colors duration-200 ${
                    (pathname === `${menu.url}/` || pathname === menu.url) &&
                    "active"
                  }`}
                >
                  {menu.name}
                </a>
              </li>
            )}
          </>
        ))
      }
      {
        navigation_button.enable && (
          <li class="mt-4 inline-block lg:hidden">
            <a
              class="btn btn-outline-primary btn-sm hover:text-text-light dark:hover:text-text cursor-pointer transition-colors duration-200"
              href={navigation_button.link}
            >
              {navigation_button.label}
            </a>
          </li>
        )
      }
    </ul>
    <div class="order-1 ml-auto flex items-center md:order-2 lg:ml-0">
      {
        features.search && (
          <button
            class="border-border text-text-dark hover:text-text-light dark:border-darkmode-border dark:hover:text-text mr-5 inline-block cursor-pointer border-r pr-5 text-xl transition-colors duration-200 dark:text-white"
            aria-label="search"
            data-search-trigger
          >
            <IoSearch />
          </button>
        )
      }
      {import.meta.env.DEV && <ThemeSwitcher className="mr-5" />}
      {
        navigation_button.enable && (
          <a
            class="btn btn-outline-primary btn-sm hover:text-text-light dark:hover:text-text hidden cursor-pointer transition-colors duration-200 lg:inline-block"
            href={navigation_button.link}
          >
            {navigation_button.label}
          </a>
        )
      }
    </div>
  </nav>
</header>
