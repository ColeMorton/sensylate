---
import Base from "@/layouts/Base.astro";
import ImageMod from "@/components/ImageMod.astro";
import ImageLightbox from "@/helpers/ImageLightbox.tsx";

// Gallery images for navigation testing
const galleryImages = [
  { url: "/images/logo.png", title: "Logo" },
  { url: "/images/og-image.png", title: "OG Image" },
  { url: "/images/banner.png", title: "Banner" },
  { url: "/images/call-to-action.png", title: "Call to Action" },
];
---

<Base title="Lightbox Test">
  <div class="container">
    <h1>React Awesome Lightbox Test</h1>

    <div class="section">
      <h2>Gallery with Navigation (Click to see arrows)</h2>
      <p>
        Click on any image to open it in a lightbox with left/right navigation
        arrows:
      </p>

      <div class="my-8 grid grid-cols-2 gap-6 md:grid-cols-4">
        {
          galleryImages.map((image, index) => (
            <div key={index}>
              <ImageLightbox
                src={image.url}
                alt={image.title}
                images={galleryImages}
                className="w-full rounded-lg shadow-lg cursor-pointer hover:opacity-90 transition-opacity"
                thumbnailClassName="w-full h-32 object-cover"
                client:load
              />
              <p class="mt-2 text-center text-sm">{image.title}</p>
            </div>
          ))
        }
      </div>
    </div>

    <div class="section">
      <h2>Single Images with Lightbox</h2>
      <p>Click on any image to open it in a lightbox:</p>

      <div class="my-8 grid grid-cols-1 gap-6 md:grid-cols-2">
        <div>
          <ImageMod
            src="/images/logo.png"
            alt="Logo"
            class="w-full rounded-lg shadow-lg"
          />
          <p class="mt-2 text-center">Logo Image</p>
        </div>

        <div>
          <ImageMod
            src="/images/og-image.png"
            alt="OG Image"
            class="w-full rounded-lg shadow-lg"
          />
          <p class="mt-2 text-center">OG Image</p>
        </div>
      </div>
    </div>

    <div class="section">
      <h2>Images without Lightbox</h2>
      <p>These images have lightbox disabled:</p>

      <div class="my-8 grid grid-cols-1 gap-6 md:grid-cols-2">
        <div>
          <ImageMod
            src="/images/logo.png"
            alt="Logo"
            enableLightbox={false}
            class="w-full rounded-lg shadow-lg"
          />
          <p class="mt-2 text-center">Logo (No Lightbox)</p>
        </div>

        <div>
          <ImageMod
            src="/images/og-image.png"
            alt="OG Image"
            enableLightbox={false}
            class="w-full rounded-lg shadow-lg"
          />
          <p class="mt-2 text-center">OG Image (No Lightbox)</p>
        </div>
      </div>
    </div>

    <div class="my-8 rounded-lg bg-blue-50 p-6 dark:bg-blue-900">
      <h3>Testing Instructions:</h3>
      <ul class="list-inside list-disc space-y-2">
        <li>
          <strong>Gallery Navigation:</strong> Click on images in the first section
          to see navigation arrows (left/right)
        </li>
        <li>
          <strong>Arrow Navigation:</strong> Use left/right arrows or arrow keys
          to navigate between images
        </li>
        <li><strong>Desktop:</strong> Click on images to open lightbox</li>
        <li><strong>Mobile:</strong> Tap on images to open lightbox</li>
        <li>
          <strong>Keyboard:</strong> Tab to images and press Enter/Space to open
        </li>
        <li>
          <strong>Close:</strong> Click outside, press ESC, or use the close button
        </li>
        <li>
          <strong>Zoom/Rotate:</strong> Use zoom and rotate controls in the lightbox
        </li>
        <li>
          <strong>Disabled:</strong> Images in the last section should not open lightbox
        </li>
      </ul>
    </div>
  </div>
</Base>
