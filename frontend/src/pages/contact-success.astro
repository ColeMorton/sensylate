---
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
---

<Base
  title="Professional Inquiry Submitted Successfully"
  meta_title="Contact Form Success - Professional Inquiry Received"
  description="Your professional inquiry has been received and will be reviewed within 48 hours."
>
  <PageHeader title="Inquiry Received!" />
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="mx-auto text-center sm:col-10 md:col-8 lg:col-6">
          <div
            class="rounded-lg border border-green-200 bg-green-50 p-6 shadow-sm sm:p-8 dark:border-green-800/30 dark:bg-green-950/20"
          >
            <div
              class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-green-100 dark:bg-green-900/30"
            >
              <svg
                class="h-8 w-8 text-green-600 dark:text-green-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <h2
              class="mb-4 text-2xl font-bold text-green-800 dark:text-green-200"
            >
              Professional Inquiry Received
            </h2>
            <p class="mb-6 text-lg text-green-700 dark:text-green-300">
              Thank you for your professional inquiry. Your message has been
              received and will be reviewed personally within 48 hours.
            </p>
            <div
              class="mb-6 rounded-lg border border-green-200 bg-green-100 p-4 dark:border-green-800/40 dark:bg-green-900/20"
            >
              <p class="text-sm text-green-800 dark:text-green-300">
                <strong>Next Steps:</strong> You'll receive a detailed response addressing
                your inquiry with relevant technical documentation and collaboration
                opportunities as applicable.
              </p>
            </div>
            <div class="flex flex-col justify-center gap-3 sm:flex-row">
              <a href="/" class="btn btn-primary"> Return to Home </a>
              <a href="/about" class="btn btn-outline-primary">
                Learn More About Sensylate
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
