---
import Base from "@/layouts/Base.astro";
import GalaxyAnimation from "@/helpers/GalaxyAnimation";
import DynamicHomepageHook from "@/helpers/DynamicHomepageHook";
import ScrollFadeHandler from "@/helpers/ScrollFadeHandler";
---

<Base>
  <!-- Galaxy Animation Background -->
  <section
    id="main-galaxy-section"
    class="bg-body dark:bg-darkmode-body relative h-screen overflow-hidden"
  >
    <div id="galaxy-animation">
      <GalaxyAnimation client:only="react" className="absolute inset-0" />
    </div>
    <!-- Optional overlay content can be added here -->
    <div id="text-content" class="absolute inset-0 z-10 flex items-center justify-center">
      <DynamicHomepageHook
        client:only="react"
        className="text-text text-h1-sm md:text-h1 text-center font-bold dark:text-white"
        style="-220px"
      />
    </div>
  </section>
  
  <!-- Scroll fade handler -->
  <ScrollFadeHandler 
    client:only="react" 
    galaxyId="galaxy-animation"
    textId="text-content"
    fadeDistance={800} 
  />
</Base>

<style>
  html,
  body {
    overflow: hidden;
    height: 100vh;
  }
</style>

