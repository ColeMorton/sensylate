---
import Base from "@/layouts/Base.astro";
import HomepageScrollManager from "@/helpers/HomepageScrollManager";
import PinnedCards from "@/components/PinnedCards.astro";
---

<Base>
  <!-- Main Homepage Section -->
  <section
    id="main-galaxy-section"
    class="bg-body dark:bg-darkmode-body relative h-screen overflow-hidden"
  >
    <!-- Scroll manager handles fade and card reveal -->
    <HomepageScrollManager
      client:only="react"
      textId="text-content"
      fadeDistance={800}
      textClassName="text-text text-h1-sm md:text-h1 text-center font-bold dark:text-white"
      textStyle="-220px"
    />
  </section>

  <!-- Pinned cards (hidden initially, shown after fade) -->
  <PinnedCards />
</Base>

<style>
  html,
  body {
    overflow: hidden;
    height: 100vh;
  }
</style>
