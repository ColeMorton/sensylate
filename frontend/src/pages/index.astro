---
import Base from "@/layouts/Base.astro";
import DynamicHomepageHook from "@/helpers/DynamicHomepageHook";
import HomepageScrollManager from "@/helpers/HomepageScrollManager";
import PinnedCards from "@/components/PinnedCards.astro";
---

<Base>
  <!-- Main Homepage Section -->
  <section
    id="main-galaxy-section"
    class="bg-body dark:bg-darkmode-body relative h-screen overflow-hidden"
  >
    <!-- Text content overlay -->
    <div
      id="text-content"
      class="absolute inset-0 z-10 flex items-center justify-center"
    >
      <DynamicHomepageHook
        client:only="react"
        className="text-text text-h1-sm md:text-h1 text-center font-bold dark:text-white"
        style="-220px"
      />
    </div>
  </section>

  <!-- Pinned cards (hidden initially, shown after fade) -->
  <PinnedCards />

  <!-- Scroll manager handles fade and card reveal -->
  <HomepageScrollManager
    client:only="react"
    galaxyId="galaxy-animation"
    textId="text-content"
    fadeDistance={800}
  />
</Base>

<style>
  html,
  body {
    overflow: hidden;
    height: 100vh;
  }
</style>
