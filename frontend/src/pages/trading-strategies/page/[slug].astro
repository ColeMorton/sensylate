---
import TradingStrategyCard from "@/components/TradingStrategyCard.astro";
import Pagination from "@/components/Pagination.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.astro";
import { sortByDate } from "@/lib/utils/sortFunctions";
import PageHeader from "@/partials/PageHeader.astro";
import PostSidebar from "@/partials/PostSidebar.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const TRADING_STRATEGIES_FOLDER = "trading-strategies";

const { slug } = Astro.params;
const postIndex = (await getEntry(
  TRADING_STRATEGIES_FOLDER,
  "-index",
)) as CollectionEntry<"trading-strategies">;
const posts = await getSinglePage(TRADING_STRATEGIES_FOLDER);
const allCategories = await getAllTaxonomy(
  TRADING_STRATEGIES_FOLDER,
  "categories",
);
const categories = await getTaxonomy(TRADING_STRATEGIES_FOLDER, "categories");
const tags = await getTaxonomy(TRADING_STRATEGIES_FOLDER, "tags");
const sortedPosts = sortByDate(posts);
const totalPages = Math.ceil(posts.length / config.settings.pagination);
const currentPage = slug && !isNaN(Number(slug)) ? Number(slug) : 1;
const indexOfLastPost = currentPage * config.settings.pagination;
const indexOfFirstPost = indexOfLastPost - config.settings.pagination;
const currentPosts = sortedPosts.slice(indexOfFirstPost, indexOfLastPost);

export async function getStaticPaths() {
  const TRADING_STRATEGIES_FOLDER = "trading-strategies";
  const posts = await getSinglePage(TRADING_STRATEGIES_FOLDER);
  const totalPages = Math.ceil(posts.length / config.settings.pagination);
  const paths = [];

  for (let i = 1; i < totalPages; i++) {
    paths.push({
      params: {
        slug: (i + 1).toString(),
      },
    });
  }
  return paths;
}
---

<Base
  title={postIndex.data.title}
  meta_title={postIndex.data.meta_title}
  image={postIndex.data.image}
  description={postIndex.data.description}
>
  <PageHeader title={postIndex.data.title} />
  <section class="section">
    <div class="container">
      <div class="row gx-5">
        <!-- trading strategy posts -->
        <div class="lg:col-8">
          <div class="row">
            {
              currentPosts.map((post) => (
                <div class="mb-14 md:col-6">
                  <TradingStrategyCard data={post} />
                </div>
              ))
            }
          </div>
          <Pagination
            section={TRADING_STRATEGIES_FOLDER}
            currentPage={currentPage}
            totalPages={totalPages}
          />
        </div>

        <!-- sidebar -->
        <PostSidebar
          categories={categories}
          tags={tags}
          allCategories={allCategories}
          section="trading-strategies"
        />
      </div>
    </div>
  </section>
</Base>
