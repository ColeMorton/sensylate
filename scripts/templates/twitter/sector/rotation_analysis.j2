{%- set hook_text = hook_emoji ~ " " ~ data.sector_name ~ " rotation signal: " ~ (data.outperformance | default("N/A")) ~ "% vs SPY with " ~ (data.allocation_change | default("N/A")) ~ "% institutional rebalancing" -%}
{%- else -%}
{%- set hook_text = hook_emoji ~ " " ~ data.sector_name ~ " analysis: " ~ (data.momentum_score | default("N/A")) ~ "/10 momentum, " ~ (data.valuation_score | default("N/A")) ~ "/10 valuation vs historical" -%}
