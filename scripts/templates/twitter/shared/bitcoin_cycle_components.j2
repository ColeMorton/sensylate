{%- elif template_type == "cycle_dashboard" -%}
{%- set base_tags = ["#Bitcoin", "#CycleDashboard", "#BitcoinIntelligence"] -%}
{%- else -%}
{%- set base_tags = ["#Bitcoin", "#CycleAnalysis", "#OnChain"] -%}
{%- endif -%}
{%- for tag in (base_tags + additional_tags) -%}
{{ tag }}{{ " " if not loop.last }}
{%- endfor -%}
{%- endmacro -%}

